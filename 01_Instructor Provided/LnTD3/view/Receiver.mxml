<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300">
<mx:Script>
	<![CDATA[
		[Bindable]
		public var myProperty:String="Initial Value";
		[Bindable]
		public var myColor:uint=0x0000ff;
	]]>
</mx:Script>


	<mx:Label text="Receiving Component"/>
	<mx:Label text="{myProperty}" color="{myColor}"/>
	
</mx:VBox>
